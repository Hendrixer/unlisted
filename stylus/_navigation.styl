// Left nav size
.full,
.scroll,
.material-sidenav-inner
  height 100%

.material-sidenav-left
  z-index 10000

.nav-pic
  height 1%
  border-radius 100%
  border 3px accent solid
  padding 0
  margin-top 30%

.nav-hero
  width 100%
  height 30%
  padding 1%
  background-color primaryDark

.nav-overlay
  z-index 9000
  width 100%
  height 100%
  background-color black
  position absolute
  transform translate3d(0,0,0)

.nav-bar
  box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.2)
  background-image none

.item
  border-style none
  background-color inherit
  &.activated
    background-color white !important
    border none

h1.title
  color white
  // font-size 1.8em !important

.active-link
  color accent


